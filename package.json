{
  "name": "open-scribe",
  "version": "0.1.0",
  "description": "A desktop dictation application using OpenAI Whisper for speech-to-text transcription",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:main\"",
    "dev:main": "NODE_ENV=development electron . --dev",
    "dev:renderer": "cd src && npm run dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "setup": "node setup.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "cd src && npm install"
  },
  "keywords": [
    "dictation",
    "speech-to-text",
    "whisper",
    "openai",
    "electron",
    "desktop-app"
  ],
  "author": "Open Scribe Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^36.5.0",
    "electron-builder": "^24.6.4",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shadcn-ui": "^0.9.5"
  },
  "build": {
    "appId": "com.openscribe.app",
    "productName": "OpenScribe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    }
  }
}
